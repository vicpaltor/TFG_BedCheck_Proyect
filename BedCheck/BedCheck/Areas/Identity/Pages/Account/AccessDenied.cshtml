@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Acceso denegado";
}

<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-body p-4">
                    <h1 class="text-danger display-4">
                        <i class="fas fa-exclamation-triangle"></i> Acceso denegado
                    </h1>
                    <p class="lead text-muted">No tienes acceso a este recurso.</p>
                    <hr />
                    <p>Si crees que esto es un error, por favor contacta al administrador.</p>
                    <a href="/" class="btn btn-primary btn-lg mt-3">
                        <i class="fas fa-home"></i> Volver al Inicio
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
