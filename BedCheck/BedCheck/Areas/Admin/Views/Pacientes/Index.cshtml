@{
    ViewData["Title"] = "Lista de Pacientes";
}
<div class="container mt-3">

    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Pacientes</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-square-plus"></i>Crear nuevo Pacientes</a>
        </div>
    </div>

    <br />
    <br />

    <table id="tblPacientes" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Nombre paciente</th>
                <th>Edad paciente</th>
                <th>Sexo paciente</th>
                <th>Enfermedades del paciente</th>
                <th>Tratamientos del paciente</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>


@section Scripts {
    <script src="~/js/paciente.js"></script>
}