@{
    ViewData["Title"] = "Lista de Habitaciones";
}
<div class="container mt-3">

    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Habitaciones</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-square-plus"></i>Crear nueva habitacion</a>
        </div>
    </div>


    <br />
    <br />
    <table id="tblHabitaciones" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Numero Habitacion</th>
                <th>Tiene camas Ocupadas</th>
                <th>Enfermedades y Tratamientos</th>
                <th>CamasTotales</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>


@section Scripts{
<script src="~/js/habitacion.js"></script>
}