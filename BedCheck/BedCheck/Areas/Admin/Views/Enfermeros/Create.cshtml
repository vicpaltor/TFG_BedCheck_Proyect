@model BedCheck.Models.Enfermero

@{
    ViewData["Title"] = "Crear Enfermero";
}

<br />
<br />
<h3 class="text-center">Crear un nuevo enfermero</h3>
<form method="POST" asp-action="Create">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="NombreEnfermero"></label>
                </div>
                <div class="col-8">
                    <input asp-for="NombreEnfermero" class="form-control" placeholder="Ingresa el nombre del emfermero" />
                    <span asp-validation-for="NombreEnfermero" class="text-danger"></span>
                </div>
            </div>

            <br />
            <br />

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="RolEnfermero"></label>
                </div>
                <div class="col-8">
                    <input asp-for="RolEnfermero" class="form-control" placeholder="Ingresa el rol del enfermero"  />
                    <span asp-validation-for="RolEnfermero" class="text-danger"></span>
                </div>
            </div>

            <br />
            <br />

            <div class="form-group-row">
                <div class="col-8">
                    <partial name="_VistaCrearVolver" />
                </div>
            </div>
        </div>

    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}